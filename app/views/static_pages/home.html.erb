<div class="center hero-unit">
  <h1>Welcome to Shajarah</h1>

  <h2>
    This is the home page for the Shajarah application.
  </h2>
<% unless current_user %>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary white" %>&nbsp; OR &nbsp;
  <%= link_to "Connect With Facebook", "/auth/facebook", class: "btn btn-large btn-primary facebook" %>
  <% else %>
    <%= link_to "View/Build Your Profile", current_user, class: "btn btn-large btn-primary facebook" %>
    <% if Authentication.find_by_user_id(current_user.id) %>
    <%= link_to "Invite your Facebook Friends", "#", class: "btn btn-large btn-primary facebook", :id => "invite_fb_friends"  %>
    <div id="fb_root"></div>
    <script src="http://connect.facebook.net/en_US/all.js"></script>
    <script>
    $(function(){
    	$("a#invite_fb_friends").click(function(){
    		FB.init({
    			appId: '786610081354504',
    			cookie: false,
    			status: true
    		});
    		FB.ui({method: 'apprequests', message: '<%= current_user.firstname%>  <%= current_user.latname%> invites you to build your family tree using Shajarah App.'});
    	});
    });
    </script>
    <% end %>
  <% end %>
</div>

